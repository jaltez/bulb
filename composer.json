{
    "name": "jaltez/bulb",
    "type": "project",
    "description": "Standalone AI chatbot app.",
    "keywords": ["standalone", "ai", "chatbot", "app"],
    "license": "MIT",
    "require": {
        "php": "^8.2",
        "andreiio/blade-remix-icon": "^3.3",
        "laravel/framework": "^11.21",
        "laravel/tinker": "^2.9",
        "livewire/livewire": "^3.5.6",
        "livewire/volt": "^1.6.5",
        "nativephp/electron": "^0.6.5",
        "openai-php/client": "^0.10.1"
    },
    "require-dev": {
        "barryvdh/laravel-debugbar": "^3.13",
        "barryvdh/laravel-ide-helper": "^3.2",
        "fakerphp/faker": "^1.23.1",
        "larastan/larastan": "^2.9",
        "laravel/breeze": "^2.1.4",
        "laravel/pint": "^1.17.2",
        "laravel/sail": "^1.31.1",
        "mockery/mockery": "^1.6.12",
        "nunomaduro/collision": "^8.4",
        "pestphp/pest": "^2.35.1",
        "pestphp/pest-plugin-laravel": "^2.4",
        "rector/rector": "^1.2"
    },
    "autoload": {
        "psr-4": {
            "App\\": "app/",
            "Database\\Factories\\": "database/factories/",
            "Database\\Seeders\\": "database/seeders/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Tests\\": "tests/"
        }
    },
    "scripts": {
        "post-autoload-dump": [
            "Illuminate\\Foundation\\ComposerScripts::postAutoloadDump",
            "@php artisan package:discover --ansi"
        ],
        "post-update-cmd": [
            "@php artisan vendor:publish --tag=laravel-assets --ansi --force"
        ],
        "post-root-package-install": [
            "@php -r \"file_exists('.env') || copy('.env.example', '.env');\""
        ],
        "post-create-project-cmd": [
            "@php artisan key:generate --ansi",
            "@php -r \"file_exists('database/database.sqlite') || touch('database/database.sqlite');\"",
            "@php artisan migrate --graceful --ansi"
        ],
        "ide": [
            "@php artisan ide-helper:generate",
            "@php artisan ide-helper:meta",
            "@php artisan ide-helper:models --nowrite --dir='app' --dir='modules'"
        ],
        "flush": [
            "@php artisan optimize:clear"
        ],
        "dev": [
            "Composer\\Config::disableProcessTimeout",
            "npx concurrently -c \"#93c5fd,#c4b5fd,#fb7185,#fdba74\" \"php artisan serve\" \"php artisan queue:listen --tries=1\" \"php artisan pail --timeout=0\" \"npm run dev\" --names=server,queue,logs,vite"
        ],
        "refactor": "rector process",
        "lint": "pint",
        "test:refactor": "rector process --dry-run",
        "test:lint": "pint --test",
        "test:types": "phpstan analyse --ansi",
        "test:unit": "pest --colors=always",
        "test": [
            "@test:refactor",
            "@test:lint",
            "@test:types",
            "@test:unit"
        ]
    },
    "extra": {
        "laravel": {
            "dont-discover": []
        }
    },
    "config": {
        "optimize-autoloader": true,
        "preferred-install": "dist",
        "sort-packages": true,
        "allow-plugins": {
            "pestphp/pest-plugin": true,
            "php-http/discovery": true
        }
    },
    "minimum-stability": "stable",
    "prefer-stable": true
}
